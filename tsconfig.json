{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "reflect-metadata", "jest"],
    "lib": ["es5", "es6", "es2015"],
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "app.types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}